{
    "includes": ["src/**/*.ts", "tests/**/*.ts"],
    "compilerOptions": {
        "lib": ["esnext", "dom"],
        "downlevelIteration": true,
        "exactOptionalPropertyTypes": true,
        "target": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    }
}
